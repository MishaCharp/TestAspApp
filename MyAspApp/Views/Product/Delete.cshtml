@model MyAspApp.Models.Product

    <form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="row mb-3">
            <h2 class="text-info pl-3">Delete product</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-4 col-form-label"></label>
                    <div class="col">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Price" class="col-4 col-form-label"></label>
                    <div class="col">
                        <input asp-for="Price" class="form-control" disabled />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Description" class="col-4 col-form-label"></label>
                    <div class="col">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-4 col-form-label">Image</div>
                    <div class="col">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" disabled/>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="CategoryId" class="col-4 col-form-label"></label>
                    <div class="col">
                        <input asp-for="Category.Name" class="form-control" disabled />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="CategoryId" class="col-4 col-form-label"></label>
                    <div class="col">
                        <input asp-for="Category.Name" class="form-control" disabled />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ApplicationId" class="col-4 col-form-label"></label>
                    <div class="col">
                        <input asp-for="ApplicationType.Name" class="form-control" disabled />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-8 offset-4">
                            <button style="width:70%" type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" style="width:25%" class="btn btn-secondary">Back</a>
                    </div>
                </div>

            </div>
            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius: 5px; border:1px solid #bbb">
                }
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>

        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });

    </script>
}

