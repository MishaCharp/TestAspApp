@model MyAspApp.Models.Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="row mb-3">
            <h2 class="text-info pl-3">Delete category</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-4 col-form-label"></label>
                    <div class="col">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="DisplayOrder" class="col-4 col-form-label"></label>
                    <div class="col">
                        <input asp-for="DisplayOrder" class="form-control" disabled/>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-8 offset-4">
                        <button style="width:70%" type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" style="width:25%" class="btn btn-secondary">Back</a>
                    </div>
                </div>

            </div>

            @*Keep this empty*@

        </div>

    </div>
</form>

